/**-- Container --**/
#container {
	margin-top: 0px; 
}

body.two-sidebars .content-sidebar-wrap {
	width: 73%
}


/**-- Content --**/
#post-content {
    font-size: 15px;
    line-height: 1.3;
    padding: 0 10px;
    
    p, ol, ul, h1, h2, h3, h4{
	    margin-bottom: 1em;
    }
    ol { list-style: inside decimal; }
    h2 { font-size: 18px; font-weight: bold; }
    img{ margin: 10px; }
    a:link { color: #3b5998; }
    
}
.node {
    margin: 10px 0 30px;
}
.node header {
    margin-bottom: 10px;
    font-weight: 700;
}

.content.node-page {
	margin-bottom: 20px;
}

.links li a {
	// @include redGradient;
	text-decoration: none;
}


.links {
	li {
		a{
			background: none;
			padding: 8px;
			font-size: 12px;
			text-transform: uppercase;
			// color: $dark;
			// border: 1px solid $gold;
			&:hover {
				// @include redGradient;
				color: white;
				font-weight: 700;
			}
		}
	}
}

/**-- Right Sidebar --**/
body.two-sidebars #sidebar-second {
	width: 29%;
	
	table { background: none; }
	.submitted { display: none;}
	
	.wdform_table1 .wdform_tbody1{
		text-align: left;
	}
	#form44 .wdform_table {
		padding-left: 0px !important;
	}
}

/**-- iFrames --**/
.google-ad {
	width: 768px;
	margin: auto;
}













