@import "hadit";
@import "compass/reset"; 
@import url("http://fonts.googleapis.com/css?family=Asap:400,700");
body { background: $main; font-family: "Asap", verdana; }
// a:link { color: $dark; }

/**-- Typography --**/
.node h2.title a {
	@include headerLink;
}

/**-- Header --**/
header#header { margin-top: 20px; }

.title {
	width: 750px; 
	margin:auto; 
	#site-title a { color: $dark; }
}
#site-title { 
	margin: 40px 0;
	line-height: normal; 
} 
#logo {
	display: block;
	background: url("../../images/logo/haditlogo2007_dark.jpg") no-repeat 50% 50%;
	width: 160px;
	height: 160px;
	background-size: 160px auto;
	margin-right: 20px;
}
.header-image {
	display: block;
	height: 180px;
	width: 100%;
	position: relative;
	clear: both;
	background: url('../../images/js-header/top_2.jpg') 100% 50% no-repeat; //temporary
}

/**-- Menu --**/
ul.menu {
	text-align: right;
	text-transform: uppercase;
	font-size: 0;
	.leaf {
		font-size: 16px;
		display: inline-block;
		margin: 0;
		margin-right: 2px; 
	}
}

